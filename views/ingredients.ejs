<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mes Ingr√©dients</title>
    <link rel="stylesheet" href="/styles/ingredients.css">
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Mes Ingr√©dients</h1>
            <p>G√©rez votre inventaire alimentaire personnel</p>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error">
                <strong>Erreur :</strong> <%= error %>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success">
                <strong>Succ√®s :</strong> <%= success %>
            </div>
        <% } %>

        <div class="card">
            <% if (ingredients && ingredients.length > 0) { %>
                <div class="table-container">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Quantit√©</th>
                                <th>Unit√©</th>
                                <th>Cat√©gorie</th>
                                <th>Expiration</th>
                                <th>Calories</th>
                                <th>Date d'ajout</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% ingredients.forEach(ingredient => { %>
                                <% 
                                const categoryNames = {
                                    1: 'Lait et produits laitiers',
                                    2: 'Viandes, volailles, poissons',
                                    3: 'L√©gumineuses, noix, graines',
                                    4: 'C√©r√©ales',
                                    5: 'Fruits',
                                    6: 'L√©gumes',
                                    7: 'Mati√®res grasses',
                                    8: 'Boissons',
                                    9: 'Sauces',
                                    10: '√âpices',
                                    11: 'Repas'
                                };
                                const categoryName = categoryNames[ingredient.categorie] || 'Autre';
                                const categoryClass = categoryNames[ingredient.categorie] ? 
                                    categoryNames[ingredient.categorie].toLowerCase().replace(/[^a-z]/g, '-') : 'other';
                                
                                const unitNames = {
                                    1: 'g',
                                    2: 'L',
                                    3: 'unit√©',
                                    4: 'ml',
                                    5: 'portion'
                                };
                                const unitName = unitNames[ingredient.unite] || 'unit√©';
                                %>
                                <tr>
                                    <td><strong><%= ingredient.nom %></strong></td>
                                    <td><%= ingredient.quantite %></td>
                                    <td><%= unitName %></td>
                                    <td>
                                        <span class="category-badge category-<%= categoryClass %>">
                                            <%= categoryName %>
                                        </span>
                                    </td>
                                    <td>
                                        <% 
                                        let expirationDate = 'Non d√©finie';
                                        let isExpiringSoon = false;
                                        let expirationDateObj = null;
                                        
                                        if (ingredient.dlc && ingredient.dlc > 0 && ingredient.date_ajout) {
                                            const addDate = new Date(ingredient.date_ajout);
                                            addDate.setDate(addDate.getDate() + ingredient.dlc);
                                            expirationDate = addDate.toLocaleDateString('fr-FR');
                                            expirationDateObj = addDate;
                                        } else if (ingredient.expiration && ingredient.expiration > 0 && ingredient.date_ajout) {
                                            const addDate = new Date(ingredient.date_ajout);
                                            addDate.setDate(addDate.getDate() + ingredient.expiration);
                                            expirationDate = addDate.toLocaleDateString('fr-FR');
                                            expirationDateObj = addDate;
                                        }
                                        
                                        if (expirationDateObj) {
                                            const today = new Date();
                                            today.setHours(0, 0, 0, 0);
                                            expirationDateObj.setHours(0, 0, 0, 0);
                                            const diffTime = expirationDateObj.getTime() - today.getTime();
                                            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                                            isExpiringSoon = diffDays >= 0 && diffDays <= 3;
                                        }
                                        %>
                                        <span class="expiration-cell">
                                            <% if (isExpiringSoon) { %>
                                                <span class="expiring-soon" title="Expire dans les 3 prochains jours">‚ö†Ô∏è</span>
                                            <% } %>
                                            <%= expirationDate %>
                                        </span>
                                    </td>
                                    <td><%= ingredient.calories || 'N/A' %></td>
                                    <td><%= ingredient.date_ajout ? new Date(ingredient.date_ajout).toLocaleDateString('fr-FR') : 'N/A' %></td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-sm btn-edit" 
                                                    data-id="<%= ingredient.id %>"
                                                    data-name="<%= ingredient.nom %>"
                                                    data-quantity="<%= ingredient.quantite %>"
                                                    data-unit="<%= unitName %>"
                                                    data-category="<%= categoryName %>"
                                                    data-dlc="<%= ingredient.dlc || ingredient.expiration || '' %>"
                                                    data-calories="<%= ingredient.calories || '' %>"
                                                    title="Modifier">
                                                ‚úèÔ∏è
                                            </button>
                                            <button class="btn-sm btn-delete" 
                                                    data-id="<%= ingredient.id %>"
                                                    data-name="<%= ingredient.nom %>"
                                                    title="Supprimer">
                                                üóëÔ∏è
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div style="text-align: center; padding: 3rem; color: #4e5a6d;">
                    <h3>Aucun ingr√©dient trouv√©</h3>
                    <p>Commencez par ajouter vos premiers ingr√©dients !</p>
                </div>
            <% } %>
        </div>

        <div class="nav-links">
            <a href="/ingredients/add" class="btn btn-primary">Ajouter des ingr√©dients</a>
            <a href="/dashboard" class="btn btn-secondary">Retour au tableau de bord</a>
        </div>
    </div>

    <!-- Modal de modification -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Modifier l'ingr√©dient</h2>
                <span class="close">&times;</span>
            </div>
            <form id="editForm">
                <input type="hidden" id="editId" name="id">
                
                <div class="form-group">
                    <label for="editNom">Nom :</label>
                    <input type="text" id="editNom" name="nom" class="form-control" required>
                </div>
                
                <div class="form-group">
                    <label for="editQuantite">Quantit√© :</label>
                    <input type="number" id="editQuantite" name="quantite" class="form-control" step="0.01" required>
                </div>
                
                <div class="form-group">
                    <label for="editUnite">Unit√© :</label>
                    <input type="text" id="editUnite" name="unite" class="form-control" required>
                </div>
                
                <div class="form-group">
                    <label for="editCategorie">Cat√©gorie :</label>
                    <select id="editCategorie" name="categorie" class="form-control">
                        <option value="fruits">Fruits</option>
                        <option value="vegetables">L√©gumes</option>
                        <option value="dairy">Produits laitiers</option>
                        <option value="meat">Viande</option>
                        <option value="grains">C√©r√©ales</option>
                        <option value="other">Autre</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="editDlc">Date d'expiration :</label>
                    <input type="date" id="editDlc" name="dlc" class="form-control">
                </div>
                
                <div class="form-group">
                    <label for="editCalories">Calories :</label>
                    <input type="number" id="editCalories" name="calories" class="form-control">
                </div>
                
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">Sauvegarder</button>
                    <button type="button" class="btn btn-secondary" id="cancelBtn">Annuler</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/ingredients-view.js"></script>
</body>
</html>